@model IEnumerable<AdgisticsShoppingKart.Models.ItemModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="container">
        <h2>Items</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Value</td>
                        @Html.HiddenFor(m => item.Id)
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>