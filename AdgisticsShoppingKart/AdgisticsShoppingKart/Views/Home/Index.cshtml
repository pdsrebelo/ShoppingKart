@model IEnumerable<AdgisticsShoppingKart.Models.ItemViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div>
    <div class="container">
        <div class="row">
            <div class="jumbotron col-md-7">
                <h2>Items</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Value</th>
                            <th>Promotion</th>
                            <th>Add to cart</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Value</td>
                                @if (item.OfferView != null)
                                {
                                    <td>@(item.OfferView.Quantity + " for " + item.OfferView.Value)</td>
                                }
                                else
                                {
                                    <td>None</td>
                                }
                                @Html.HiddenFor(m => item.Id)
                                <td>
                                    <button type="button" class="btn btn-success">+</button> <button type="button" class="btn btn-danger">-</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="jumbotron col-md-4 col-md-offset-1">
                <h3>🛒Shopping Cart</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>3</td>
                            <td>A</td>
                            <td>13.00</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>TOTAL</td>
                            <td>100</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>